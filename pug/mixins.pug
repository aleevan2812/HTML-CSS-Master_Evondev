mixin tourItem(image, price, title, review, reviewCount, duration, tourPrice)
  .tour
    .tour-top
      img.tour-image(src= image, alt='this-is-image')
      span.tour-price= price 
    .tour-content
      h3.tour-title= title 
      .tour-rating
        .tour-review
          .tour-star
            img(src='./images/Star.png', alt='tour-rating')
          .tour-review-count
            span= review 
              |  (#{reviewCount} reviews)
        span.tour-duration  Duration: #{duration} 
      a.tour-button(href='.', target='_blank', rel='noopener noreferrer') Tours Price $#{tourPrice}

mixin popularItem()
  .popular-item 
    .popular-image 
        .popular-overlay
        img(src="https://images.unsplash.com/photo-1597174581572-071080396ba9?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="unsplash").popular-img
        span.popular-label Must See
    .popular-content
        span.popular-time Sep 28 10:00 AM - 1:00 PM
